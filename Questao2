'''
Dado um número inteiro positivo n, calcular a soma dos n primeiros números inteiros positivos.
'''

# Input principal do usuário
def leiturnumdigit (numdigit):
    print('Digite um número inteiro positivo.')
    numdigit = int(input())
    return numdigit

# Questiona se o usuário quer continuar ou sair do programa
def contiousair (cont):
    print('Deseja continuar? Digite 1 para continuar ou 0 para sair.')
    cont = int(input())
    cont = checarsecontehvalido(cont)
    return cont 

# Checa se o cont inserido pelo usuário é igual a 0 ou 1
def checarsecontehvalido (cont):
    if cont == 0 or cont == 1:
        # Ação se o usuário for sair
        if cont == False:
            print('O exercício foi finalizado.')
    else:
        # Ação se o usuário tiver inserido número diferente de 0 e 1
        print('Número inválido.')
        cont = contiousair(1)
    return cont

# Assign 1 to the counter just for the first run
cont = 1
while cont == 1:
    # Chama função para ler o input do usuário
    numdigit = leiturnumdigit(1)
    # Checa se o input segue os requirements
    if numdigit <= 0:
        # Mensagem exibida se não seguir os requisitos básicos
        print('O número deve ser inteiro e positivo.')
        # Chama função para usuário decidir se continua ou sai do programa
        cont = contiousair(1)  
    # Executa os cálculos com o correto input
    else:
        soma = numdigit * (numdigit + 1) // 2
        print('A soma dos primeiros', numdigit , ' números inteiros positivos é igual a:', soma)
        # Chama função para usuário decidir se continua ou sai do programa
        cont = contiousair(1)
